<UserControl x:Class="TATM.SGCB.GameConfigCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="100
             ">
    <Viewbox>
        <Grid Height="300" Width="100">
            <Button Content="Edit" Name="EditBtn" RenderTransformOrigin="0.196,0.215" Margin="0,0,0,278" Click="EditBtn_Click"/>
            <Button Content="Save" Name="SaveBtn" Margin="0,278,0,0" Click="SaveBtn_Click"/>
            <Button Content="Load" Name="LoadBtn" Margin="0,256,0,22" Click="LoadBtn_Click"/>
            <Button Content="Player" Name="PlayerBtn" Margin="0,234,0,44" Click="PlayerBtn_Click"/>
            <Label Content="Maps" Margin="0,22,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
            <ListBox Name="MapList" Margin="0,48,0,71" SelectionChanged="MapList_SelectionChanged" SelectionMode="Single"/>
        </Grid>
    </Viewbox>
</UserControl>
